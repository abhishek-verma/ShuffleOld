<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widgetAlbumArt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@color/lt_black"
        android:scaleType="centerCrop"
        android:src="@drawable/all_music"
        android:tint="@color/translucent_black"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/widgetSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:paddingBottom="10dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:text="@string/widget_inactive_string"
        android:textSize="@dimen/font_size_widget_song_name" />

    <TextView
        android:id="@+id/widgetArtistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widgetSongTitle"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="0dp"
        android:text=""
        android:textSize="@dimen/font_size_widget_artist_name" />
</RelativeLayout>